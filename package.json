{
  "name": "node-calibre-api",
  "version": "0.0.1",
  "author": "xstudiodigital",
  "dependencies": {
    "aws-sdk": "^2.1055.0",
    "based-blob": "^1.0.1",
    "body-parser": "^1.19.1",
    "cors": "^2.8.5",
    "debug": "^2.6.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.2",
    "multiparty": "^4.2.2",
    "request": "^2.79.0"
  },
  "scripts": {
    "start": "DEBUG=calibre-api* rm -rf build && tsc && node build/index.js",
    "test": "jest",
    "lint": "eslint --ext .js,.ts .",
    "test:coverage": "jest --bail --coverage",
    "test:watch": "jest --watchAll --verbose",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test:coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "repo-tools check-remote && npm run validate",
      "post-merge": "repo-tools install-packages"
    }
  },
  "devDependencies": {
    "@jest-mock/express": "^1.4.5",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.0",
    "@types/multiparty": "^0.0.33",
    "@types/node": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "dotenv": "^10.0.0",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^25.3.4",
    "husky": "^4.3.8",
    "jest": "^27.4.7",
    "prettier": "^2.5.1",
    "repo-tools": "^0.2.2",
    "ts-jest": "^27.1.2",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.4"
  }
}
